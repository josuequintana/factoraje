header.osigu-login.row
  img.svg-osigu.text-center(src="app/img/newlogo.png", alt="App Logo", width="90px", height="65px")
.container.container-sm.login(ng-controller="loginController")

  .center-block.mt-xl
    // START panel

    .row
      .panel-body
        form(role='form').mb-lg
          .row
            p.text-center.text-gray-dark.mb-75
              | Factoraje
            .box-login
              .input-group
                span.input-group-addon
                  i(aria-hidden="true").fa.fa-user.fa-fw
                input#InputUser.form-control(type='text', placeholder='Usuario', autocomplete="off", ng-model="form.username")

              .input-group
                span.input-group-addon
                  i(aria-hidden="true").fa.fa-lock.fa-fw
                input#InputPassword1.form-control(type='password', placeholder='Contrase√±a', ng-model="form.password")
              .row.loginErrMsg.text-danger(ng-show="$root.showMsgLogin")
                i(aria-hidden="true").fa.fa-exclamation-triangle &nbsp;
                | {{$root.msgLogin}}
              .form-group.has-feedback
                button.btn.btn-block.text-white(type='submit', ng-click="submit()") Ingresar
              .row.loginErrMsgConn.text-danger(ng-show="$root.showMsgLoginConn")
                i(aria-hidden="true").fa.fa-exclamation-triangle &nbsp;
                | {{$root.msgLoginConn}}

.overlay_loading(ng-show="$root.showLoading")
