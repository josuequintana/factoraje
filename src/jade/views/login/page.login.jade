//header.osigu-login.row
  img.svg-osigu.text-center(src="app/img/newlogo.png", alt="App Logo", width="90px", height="65px")
.container.container-fluid.login(ng-controller="loginController")
  .center-block.mt-xl
    .row
      .col-xs-1.col-sm-3.col-md-4
      .col-xs-10.col-sm-6.col-md-4
          .panel-body
            form(role='form').mb-lg
              .box-login
                img.logo.mt-xl(src="app/img/delantos-logo.png", alt="Delantos Logo", width="200px", height="70px")
              
                .input-group.mt-xxl
                  span.input-group-addon
                    i(aria-hidden="true").fa.fa-user.fa-fw
                  input#InputUser.form-control(type='text', placeholder='Correo electr\u00f3nico', autocomplete="off", ng-model="form.username")

                .input-group
                  span.input-group-addon
                    i(aria-hidden="true").fa.fa-lock.fa-fw
                  input#InputPassword1.form-control(type='password', placeholder='Contraseña', ng-model="form.password")
                .row.loginErrMsg.text-danger(ng-show="$root.showMsgLogin")
                  i(aria-hidden="true").fa.fa-exclamation-triangle &nbsp;
                  | {{$root.msgLogin}}
                .form-group.has-feedback
                  button.btn.btn-block.text-white(type='submit', ng-click="submit()") Entrar
                .row.loginErrMsgConn.text-danger(ng-show="$root.showMsgLoginConn")
                  i(aria-hidden="true").fa.fa-exclamation-triangle &nbsp;
                  | {{$root.msgLoginConn}}
                .row.text-center.forgot
                  a ¿Olvidaste tu contraseña?
          .create 
            a Crear una nueva cuenta
      .col-xs-1.col-sm-3.col-md-4

